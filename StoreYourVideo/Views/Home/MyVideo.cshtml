@{
    ViewData["Title"] = "Your video repository";
}
<link rel="stylesheet" href="~/css/line.css" />

<div class="text-center">
    <h1 class="display-4">Welcome <span class="fw-bold">@ViewData["Title"]</span></h1>
    <div class="line-normal"></div>
</div>
<div class="card">
    <div class="card-header">
        UpLoad your video
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" value="Your video Title">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputPassword">
                </div>
            </div>
            <div class="mb-3 row">
                
            </div>
        </form>
    </div>
</div>

